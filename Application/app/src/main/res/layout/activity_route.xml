<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4444"
    android:colorPrimaryDark="#E41709"
    android:outlineAmbientShadowColor="#131111"
    android:outlineSpotShadowColor="#0F0D0D"
    tools:context=".RouteActivity">

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:alpha="0.88"
        android:background="#FF4444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/createRouteButton"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.88"
        android:background="@android:color/white"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:text="Создать маршрут"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/firstPointTextView"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="42dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColorLink="#1A1818"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/secondPointTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/secondPointTextView"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="43dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColorLink="#1A1818"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/thirdPointTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/thirdPointTextView"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="42dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColorLink="#1A1818"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/fouthPointTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/fouthPointTextView"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="38dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColorLink="#1A1818"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/typeMovementSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addPointTextViewButton"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="25dp"
        android:alpha="0.88"
        android:background="@android:color/white"
        android:text="Добавить точку маршрута"
        app:layout_constraintBottom_toTopOf="@+id/deleteLastPointTextViewButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteLastPointTextViewButton"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="25dp"
        android:alpha="0.88"
        android:background="@android:color/white"
        android:text="Удалить последнюю точку"
        app:layout_constraintBottom_toTopOf="@+id/createRouteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/typeMovementSpinner"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="48dp"
        android:background="#FF9800"
        android:gravity="center"
        android:outlineSpotShadowColor="#00111010"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/addPointTextViewButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>